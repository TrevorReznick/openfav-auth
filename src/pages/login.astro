---
import Layout from '../layouts/Layout.astro'
import IsComponent from '../components/test/isComponent.astro'
import Button from '../components/base/test-buttons/Button.astro'
import MySection from '../components/common/Section.astro'

---

<Layout title="Login">
    <IsComponent 
        tagline="Welcome" 
        title="Discover the future of Astro" 
        subtitle="Flexible, performant, and modular" 
        content="Discover a new level of data analysis with our innovative and user-friendly platform. Transform your business needs with actionable insights."
        buttons={[
            {
                text: "Get Started",
                variant: "primary",
                ariaLabel: "Get started"
            },
            {
                text: "Live demo",
                variant: "secondary",
                ariaLabel: "Live demo"
            }
        ]}
    />
    
    <MySection>
        <Fragment slot="component">
            <div class="flex flex-col sm:flex-row gap-2 justify-center">
                <button 
                    class="w-64 sm:w-52 h-12 rounded-xl font-bold text-primaryText border border-solid  flex justify-center items-center cursor-pointer bg-primaryColor hover:bg-secondaryColor border-primaryColor transition"
                    aria-label="Get started"
                >
                    Get Started
                </button>
                <button
                    class="w-64 sm:w-52 h-12 rounded-xl font-bold text-primaryText border border-solid  flex justify-center items-center cursor-pointer bg-bgDark2 hover:bg-bgDark3 border-primaryColor transition"
                    aria-label="Live demo"
                >
                    Live demo
                </button>
            </div>
        </Fragment>
    </MySection>
</Layout>